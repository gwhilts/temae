<p id="notice"><%= notice %></p>

<div class="page-title row">
  <h2>All Tasks</h2>
</div>

<% @tasks_by_context.each do |context| -%>
  <div class="context row">
    <h4 class="context-name"><%= context.name %></h4>
      <% context.tasks.each_with_index do |task, index| -%>
        <div class="task row">
          <div class="small-11 medium-7 columns name"><input type="checkbox" /> <%= task.name %></div>
          <div class="hide-for-small-only medium-2 columns project"><%= task.project_name %></div>
          <div class="hide-for-small-only medium-2 columns due" style="text-align: right;"><%= task.due ? task.due.to_formatted_s(:short) : "" %> <i class="fi-calendar"></i></div>
          <div class="small-1 medium-1 columns start"><i class="fi-eye"></i></div>
        </div>
      <% end -%>
  </div>
<% end =%>

<br />

<%= link_to 'New Task', new_task_path %>
