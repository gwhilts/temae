<div class="row">
  <div id="page-title" class="small-4 small-centered medium-uncentered">Context</div>
</div>

<% @tasks_by_context.each do |context| -%>
  <% unless context.tasks.empty? -%>
    <div class="context task-group row">
      <h5 class="task-group-name"><%= context.name %></h5>
      <%= render partial: 'task_list', locals: { tasks: context.tasks } %>
    </div>
  <% end =%>
<% end =%>

<br />

<% content_for :side_menu do %>
  <%= render partial: 'side_menu', locals: { projects: @projects } %>
<% end %>
